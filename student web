             <section id="exercice-c"></section>
            <h2>Exercice : Programme en C</h2>
           

            <div class="CSC">
                <style>
                    .CSC {
            font-family: monospace;
            white-space: pre-wrap;
            color: black;
            font-size: 18px;
            line-height: 0; 
                    }
                    .keyword {
                        color: red;
                        font-weight: bold;
                    }
                     
                </style>
                <p>//  remplir matrice et calculer la sommes </p>
                <p><span class="keyword">#include</span> &lt;stdio.h&gt;</p>
                <p><span class="keyword">int</span> main() {</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">int</span> rows , cols , i , j ,sum=0;</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">scanf</span>( "%d %d",&rows,&cols);</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">int</span> matrix[rows][cols];</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">printf</span>("Entrez the elements of matrix");</p>
        
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">for</span>(<span class="keyword">int</span> i = 0; i &lt; rows ; i++) {</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">for</span>(<span class="keyword">int</span> j = 0; j &lt; cols;  j++) {</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">printf</span>("Element [%d][%d] : ", i, j);</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">if</span>(matrix[i][j] &gt; 0) {</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;sum += matrix[i][j];</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;}</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;}</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;}</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">printf</span>("La somme est :",%d sum);</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;<span class="keyword">return</span> 0;</p>
                <p>}</p>

            </div>
